<%- include("partials/header"); -%>

    <h1>Edit</h1>

    <form action="/edit" method="post">
        <div class="form-group">
            <input hidden type="text" name="postId" value=<%=id%>>
            <label>Title</label>
            <input class="form-control" type="text" name="postTitle" autocomplete="off" value=<%=title%>>
            <label>Post</label>
            <textarea class="form-control" name="postBody" rows="5" cols="30"><%=content%></textarea>
        </div>
        <button class="btn btn-primary" type="submit" name="button">Edit</button>
    </form>

<%- include("partials/footer"); -%>